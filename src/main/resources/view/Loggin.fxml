<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<StackPane fx:id="root" style="-fx-background-color: linear-gradient(to bottom right, #4A00E0, #8E2DE2);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <VBox fx:id="contentPane" alignment="CENTER" maxWidth="400" style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);" spacing="20">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40"/>
        </padding>

        <Text text="Welcome Back" fill="WHITE">
            <font>
                <Font name="System Bold" size="32"/>
            </font>
            <effect>
                <DropShadow radius="5" offsetX="2" offsetY="2" color="rgba(0,0,0,0.3)"/>
            </effect>
        </Text>

        <HBox alignment="CENTER_LEFT" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30; -fx-padding: 12 20 12 20;" spacing="10">
            <Text text="&#x1F464;" fill="WHITE">
                <font>
                    <Font size="18"/>
                </font>
            </Text>
            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-font-size: 14;" prefWidth="250"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30; -fx-padding: 12 20 12 20;" spacing="10">
            <Text text="&#x1F4E7;" fill="WHITE">
                <font>
                    <Font size="18"/>
                </font>
            </Text>
            <TextField fx:id="emailField" promptText="Email" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-font-size: 14;" prefWidth="250"/>
        </HBox>

        <HBox alignment="CENTER_LEFT" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 30; -fx-padding: 12 20 12 20;" spacing="10">
            <Text text="&#x1F512;" fill="WHITE">
                <font>
                    <Font size="18"/>
                </font>
            </Text>
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-font-size: 14;" prefWidth="250"/>
        </HBox>

        <Button fx:id="loginButton" text="Login" prefWidth="300" style="-fx-background-color: linear-gradient(to right, #FF416C, #FF4B2B); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 30; -fx-padding: 12;"/>

        <Hyperlink fx:id="forgetPasswordLink" text="Forgot Password?" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14; -fx-underline: false;"/>
    </VBox>
</StackPane>